<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color1"
            android:orientation="vertical"
            tools:context=".SetupProfile">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/uploadImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:src="@drawable/upload" />

            <TextView
                android:id="@+id/errorTextProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"
                android:text="Please upload an image" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="First Name"
                android:textColor="@color/color5" />

            <EditText
                android:id="@+id/editTextFName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:background="@color/color5"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/errorTextFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/form_margin_left"
                android:text="TextView"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/textlname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="Last Name"
                android:textColor="@color/color5" />

            <EditText
                android:id="@+id/editTextLName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:background="@color/color5"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/errorTextLname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/form_margin_left"
                android:text="TextView"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="Gender"
                android:textColor="@color/color5" />

            <LinearLayout
                android:id="@+id/radioButtonLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color1"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/genderGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="Male"
                        android:textColor="@color/color5" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="Female"
                        android:textColor="@color/color5" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/errorTextGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/form_margin_left"
                android:text="TextView"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="Nationality"
                android:textColor="@color/color5" />

            <LinearLayout
                android:id="@+id/radioButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/color1"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/nationalityGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="Malaysian"
                        android:textColor="@color/color5" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="Non-Malaysian"
                        android:textColor="@color/color5" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/errorTextNationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/form_margin_left"
                android:text="TextView"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="Date of Birth"
                android:textColor="@color/color5" />

            <TextView
                android:id="@+id/editTextDob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:background="@color/color5"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:textAlignment="textStart"
                android:text="Click here to select DOB"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/errorTextDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/form_margin_left"
                android:text="TextView"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="Contact No"
                android:textColor="@color/color5" />

            <EditText
                android:id="@+id/editTextContact"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:background="@color/color5"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/errorTextContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/form_margin_left"
                android:text="TextView"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/icno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="IC No / Passport No"
                android:textColor="@color/color5" />

            <EditText
                android:id="@+id/editTextIcno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:background="@color/color5"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/errorTextIcno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/form_margin_left"
                android:text="TextView"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="Country"
                android:textColor="@color/color5" />

            <TextView
                android:id="@+id/editTextCountry"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:background="@color/color5"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:textAlignment="textStart"
                android:text="Click here to select country"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/errorTextCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/form_margin_left"
                android:text="TextView"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="State"
                android:textColor="@color/color5" />

            <EditText
                android:id="@+id/editTextState"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:background="@color/color5"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/errorTextState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/form_margin_left"
                android:text="TextView"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="Expected Salary (RM)"
                android:textColor="@color/color5" />

            <EditText
                android:id="@+id/editTextSalary"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:background="@color/color5"
                android:ems="10"
                android:maxLength="6"
                android:inputType="text|number"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/errorTextSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/form_margin_left"
                android:text="TextView"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="Expected Salary (RM)"
                android:textColor="@color/color5" />

            <LinearLayout
                android:id="@+id/modeyout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/color1"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/myCheckBox1"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:text="Part-time"
                    android:textColor="@color/color5" />

                <CheckBox
                    android:id="@+id/myCheckBox2"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:text="Full-time"
                    android:textColor="@color/color5"/>

                <CheckBox
                    android:id="@+id/myCheckBox3"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:text="Freelance"
                    android:textColor="@color/color5" />
            </LinearLayout>

            <TextView
                android:id="@+id/errorTextMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/form_margin_left"
                android:text="TextView"
                android:textColor="@android:color/holo_red_light" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                style="@style/button_dark"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_dark"
                android:backgroundTint="@color/color2"
                android:text="Save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button"
                app:layout_constraintVertical_bias="0.5" />
        </LinearLayout>

    </ScrollView>
</layout>


