<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/viewLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/form_margin_bot" />

                <TextView
                    android:id="@+id/textViewA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Full Name"
                    android:textColor="@color/color5" />

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@drawable/field_dark"
                    android:textColor="@color/color5"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/textViewB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Email"
                    android:textColor="@color/color5" />

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@drawable/field_dark"
                    android:textColor="@color/color5"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/textViewC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Contact No"
                    android:textColor="@color/color5" />

                <TextView
                    android:id="@+id/textContact"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@drawable/field_dark"
                    android:textColor="@color/color5"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/textViewD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Address"
                    android:textColor="@color/color5" />

                <TextView
                    android:id="@+id/textAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:inputType="textMultiLine"
                    android:textSize="18sp"
                    android:gravity="top|start"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@drawable/field_dark"
                    android:textColor="@color/color5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/tetxViewE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Country"
                    android:textColor="@color/color5" />

                <TextView
                    android:id="@+id/textCountry"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@drawable/field_dark"
                    android:textColor="@color/color5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:text="Select Country"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:fontFamily="@font/inter_medium"
                    android:text="State"
                    android:textColor="@color/color5" />

                <TextView
                    android:id="@+id/textState"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@drawable/field_dark"
                    android:textColor="@color/color5"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/textViewG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:fontFamily="@font/inter_medium"
                    android:text="Business"
                    android:textColor="@color/color5" />

                <TextView
                    android:id="@+id/textBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@drawable/field_dark"
                    android:textColor="@color/color5"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/editButton"
                    style="@style/button_dark"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_dark"
                    android:backgroundTint="@color/color2"
                    android:text="Edit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/editLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color1"
                android:orientation="vertical"
                tools:context=".SetupProfile">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/uploadImage"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:src="@drawable/upload" />

                <TextView
                    android:id="@+id/errorTextProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_light"
                    android:text="Please upload an image" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Full Name"
                    android:textColor="@color/color5" />

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/errorTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="@dimen/form_margin_left"
                    android:text="TextView"
                    android:textColor="@android:color/holo_red_light" />

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Contact No"
                    android:textColor="@color/color5" />

                <EditText
                    android:id="@+id/editTextContact"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/errorTextContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="@dimen/form_margin_left"
                    android:text="TextView"
                    android:textColor="@android:color/holo_red_light" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Address"
                    android:textColor="@color/color5" />

                <EditText
                    android:id="@+id/editTextAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:ems="10"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/errorTextAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="@dimen/form_margin_left"
                    android:text="TextView"
                    android:textColor="@android:color/holo_red_light" />

                <TextView
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Country"
                    android:textColor="@color/color5" />

                <TextView
                    android:id="@+id/editTextCountry"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:text="Click here to select country"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/errorTextCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="@dimen/form_margin_left"
                    android:text="TextView"
                    android:textColor="@android:color/holo_red_light" />

                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:fontFamily="@font/inter_medium"
                    android:text="State"
                    android:textColor="@color/color5" />

                <EditText
                    android:id="@+id/editTextState"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/errorTextState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="@dimen/form_margin_left"
                    android:text="TextView"
                    android:textColor="@android:color/holo_red_light" />

                <TextView
                    android:id="@+id/business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:fontFamily="@font/inter_medium"
                    android:text="Business"
                    android:textColor="@color/color5" />

                <EditText
                    android:id="@+id/editTextBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:ems="10"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/errorTextBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="@dimen/form_margin_left"
                    android:text="TextView"
                    android:textColor="@android:color/holo_red_light" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveButton"
                    style="@style/button_dark"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_dark"
                    android:backgroundTint="@color/color2"
                    android:text="Save" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancelButton"
                    style="@style/button_light"
                    android:background="@drawable/button_light"
                    android:text="Cancel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</layout>


