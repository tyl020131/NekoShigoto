<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_ChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="Change Password"
                android:textAlignment="center"
                android:textColor="@color/color5"
                android:textSize="30dp"/>

            <LinearLayout
                android:id="@+id/viewLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Current Password"
                    android:textColor="@color/color5" />

                <EditText
                    android:id="@+id/editTextOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@drawable/field_dark"
                    android:textColor="@color/color5"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="New Password"
                    android:textColor="@color/color5" />

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@drawable/field_dark"
                    android:textColor="@color/color5"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Confirm Password"
                    android:textColor="@color/color5" />

                <EditText
                    android:id="@+id/editTextCPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@drawable/field_dark"
                    android:textColor="@color/color5"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button2"
                    style="@style/button_dark"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_dark"
                    android:backgroundTint="@color/color2"
                    android:text="Change Password" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</layout>


