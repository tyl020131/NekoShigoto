<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color1"
        tools:context=".EmployeeLogin">

        <TextView
            android:id="@+id/view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="Applying for:"
            android:textColor="@color/color5"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="394dp"
            android:layout_height="147dp"
            android:background="@drawable/button_dark"
            android:backgroundTint="@color/color3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_text" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/jobPic"
            android:layout_width="62dp"
            android:layout_height="59dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="76dp"
            app:layout_constraintEnd_toStartOf="@+id/company_name"
            app:layout_constraintHorizontal_bias="0.118"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:srcCompat="@drawable/kunkun" />

        <TextView
            android:id="@+id/company_name"
            android:layout_width="176dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/inter_medium"
            android:text="Kunkun Company"
            android:textColor="@color/color2"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/jobPic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vacancyName"
            android:layout_width="294dp"
            android:layout_height="22dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_bold"
            android:text="Product Designer"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/jobPic"
            app:layout_constraintTop_toBottomOf="@+id/company_name" />

        <TextView
            android:id="@+id/location"
            android:layout_width="364dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter_medium"
            android:text="Penang, Malaysia"
            android:textColor="@color/color2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.304"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jobPic" />

        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="Freelance"
            android:textColor="@color/color4"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location" />

        <TextView
            android:id="@+id/mode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="Freelance"
            android:textColor="@color/color4"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.249"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location" />

        <TextView
            android:id="@+id/view_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_bold"
            android:text="Cover Letter:"
            android:textColor="@color/color5"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/view_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="CV:"
            android:textColor="@color/color5"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coverLetter" />

        <TextView
            android:id="@+id/view_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="212dp"
            android:fontFamily="@font/inter_bold"
            android:text="Application:"
            android:textColor="@color/color5"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="394dp"
            android:layout_height="147dp"
            app:cardBackgroundColor="#00FFFFFF"
            app:contentPaddingTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_text3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/jobb"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="0dp"
                android:background="@drawable/border_radius"
                android:backgroundTint="@color/color3"
                android:paddingBottom="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profilepic1"
                    android:layout_width="69dp"
                    android:layout_height="71dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/applicantNamee"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:srcCompat="@drawable/kunkun" />

                <TextView
                    android:id="@+id/applicantNamee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Wong Zhi Hern"
                    android:textColor="@color/color2"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/location1"
                    app:layout_constraintStart_toEndOf="@+id/profilepic1"
                    app:layout_constraintTop_toBottomOf="@+id/position" />

                <TextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="153dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Product Designer"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/profilepic1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/location1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="34dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Penang, Malaysia"
                    android:textColor="@color/color2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/profilepic1"
                    app:layout_constraintTop_toBottomOf="@+id/applicantNamee" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_dark"
            android:backgroundTint="@color/color8"
            android:fontFamily="sans-serif-medium"
            android:text="Reject"
            android:textColor="@color/color5"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_dark"
            android:backgroundTint="@color/color10"
            android:fontFamily="sans-serif-medium"
            android:text="Approve"
            android:textColor="@color/color5"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button11"
            android:layout_width="138dp"
            android:layout_height="48dp"
            android:background="@drawable/button_dark"
            android:backgroundTint="@color/color4"
            android:fontFamily="sans-serif-medium"
            android:text="View PDF"
            android:textColor="@color/color5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_text4" />

        <TextView
            android:id="@+id/coverLetter"
            android:layout_width="339dp"
            android:layout_height="39dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/color5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_text2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
