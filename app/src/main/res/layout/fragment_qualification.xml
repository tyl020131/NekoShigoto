<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin_left"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/form_margin_left"
                android:layout_marginBottom="@dimen/form_margin_bot"
                android:fontFamily="@font/inter_medium"
                android:text="Qualitifaction"
                android:textAlignment="center"
                android:textColor="@color/color5"
                android:textSize="30dp"/>

            <LinearLayout
                android:id="@+id/viewLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Field"
                    android:textColor="@color/color5" />

                <TextView
                    android:id="@+id/textField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:minHeight="40dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:text=""
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fieldSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="test"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/expTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Study / Working Experience"
                    android:textColor="@color/color5" />

                <EditText
                    android:id="@+id/editTextExp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write Something..."
                    android:minHeight="80dp"
                    android:layout_weight="3"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:ems="10"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/educationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Education Level"
                    android:textColor="@color/color5" />

                <TextView
                    android:id="@+id/textEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:minHeight="40dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:text=""
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/educationLevelSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="test"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:fontFamily="@font/inter_medium"
                    android:text="Resume"
                    android:textColor="@color/color5" />

                <TextView
                    android:id="@+id/editTextResume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_left"
                    android:layout_marginEnd="@dimen/form_margin_left"
                    android:layout_marginBottom="@dimen/form_margin_bot"
                    android:background="@color/color5"
                    android:minHeight="40dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:text="Click here to view resume"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button2"
                    style="@style/button_dark"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_dark"
                    android:backgroundTint="@color/color2"
                    android:text="Save" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/editButton"
                    style="@style/button_dark"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_dark"
                    android:backgroundTint="@color/color2"
                    android:text="Edit" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancelButton"
                    style="@style/button_light"
                    android:background="@drawable/button_light"
                    android:text="Cancel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/removeButton"
                    style="@style/button_dark"
                    android:background="@drawable/button_dark"
                    android:backgroundTint="@color/color1"
                    android:text="Remove Resume"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</layout>


