<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color3"
        tools:context=".EmployeeLogin">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="127dp"
            android:layout_height="126dp"
            app:srcCompat="@drawable/kunkun"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="49dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter_bold"
            android:text="Product Designer"
            android:textColor="@color/color5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <View
            android:id="@+id/view3"
            android:layout_width="430dp"
            android:layout_height="1dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="298dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="409dp"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_dark"
            android:backgroundTint="#1051F8"
            android:text="Description"
            android:textAlignment="center"
            android:textColor="@color/color5"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <TextView
            android:id="@+id/JobDesc"
            android:layout_width="139dp"
            android:layout_height="31dp"
            android:text="Job Description"
            android:textColor="@color/color5"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="387dp" />

        <TextView
            android:id="@+id/Respond"
            android:layout_width="145dp"
            android:layout_height="32dp"
            android:fontFamily="sans-serif"
            android:text="Responsibilities"
            android:textColor="@color/color5"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="502dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            android:layout_width="409dp"
            android:layout_height="62dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_dark"
            android:backgroundTint="#3069FA"
            android:fontFamily="sans-serif-medium"
            android:text="Apply"
            android:textColor="@color/color5"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kunkun"
            android:textColor="@color/grey1"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="223dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jinishizai"
            android:textColor="@color/color5"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="264dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taimei"
            android:textColor="@color/color5"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="264dp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="388dp"
            android:layout_height="81dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="418dp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="388dp"
            android:layout_height="81dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="534dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
